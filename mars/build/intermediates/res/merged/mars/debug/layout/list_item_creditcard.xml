<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_creditcard"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_translucent"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_ccnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:text="xxxx-xxxx-xxxx-1234"
        android:textColor="#ff000000"
        android:textSize="@dimen/size16"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/tv_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ccnumber"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:maxLines="1"
        android:text="Expiry: 09/20"
        android:textColor="#ff000000"
        android:textSize="@dimen/size14"
        android:textStyle="normal"
        android:typeface="sans" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="20sp"
        android:layout_height="25sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/iconcancel"

        />

    <TextView
        android:id="@+id/tv_cardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_delete"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:lines="1"
        android:maxLines="1"
        android:text="JCB"
        android:textColor="@color/orange"
        android:textSize="@dimen/size12"
        android:textStyle="bold"
        android:typeface="normal"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/cardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_delete"
        android:layout_marginTop="10dp"
        android:background="@drawable/master" />

    <LinearLayout
        android:id="@+id/ll_ConfirmCCDeletion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cardType"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_silver"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="2dp"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:padding="2dp"
            android:text="@string/Confirm_Delete"
            android:textColor="@color/black"
            android:textSize="@dimen/size12" />

        <Button
            android:id="@+id/btn_Yes"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_green"
            android:text="@string/Yes" />

        <Button
            android:id="@+id/btn_No"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_red"
            android:text="@string/No" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/D:/Workspace_Android/Mars/mars/src/main/res/layout/list_item_creditcard.xml -->