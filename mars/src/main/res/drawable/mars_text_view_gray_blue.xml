<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/mars_blue" />
            <stroke android:width="2dp" android:color="@color/mars_blue" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/translucent_dark" />
            <stroke android:width="2dp" android:color="@color/mars_blue" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>