<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/mars_red" />
            <stroke android:width="5dp" android:color="@color/mars_red" />
            <corners android:topLeftRadius="11dp" android:bottomLeftRadius="11dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="5dp" android:color="@android:color/transparent" />
            <corners android:topLeftRadius="11dp" android:bottomLeftRadius="11dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
</selector>