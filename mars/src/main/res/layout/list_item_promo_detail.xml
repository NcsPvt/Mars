<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_promo_detail"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_promo_type"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2.0dp"
        android:src="@drawable/progress" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_promo_type"
        android:layout_alignTop="@id/iv_promo_type"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_promo_type"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_promo_type"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/size8" />

        <TextView
            android:id="@+id/tv_PromotionCode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/size8" />

        <TextView
            android:id="@+id/tv_promo_balance"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/size8" />
        <!--

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.2"
                        android:gravity="center"
                        android:text="@string/per_trip"/>

        -->
        <TextView
            android:id="@+id/tv_promo_expiry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="@dimen/size8" />
    </LinearLayout>

</RelativeLayout>